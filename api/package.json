{
  "name": "@emperione/api",
  "version": "0.1.0",
  "private": true,
  "description": "Backend API server for Emperione",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "test": "jest --passWithNoTests",
    "migrate": "echo \"Migrations managed by Supabase CLI. See supabase/ for SQL migrations.\"",
    "supabase:login": "supabase login",
    "supabase:migrate:new": "supabase migration new",
    "supabase:db:push": "supabase db push",
    "supabase:status": "supabase migration status",
    "migrate:run": "ts-node ./scripts/run-migrations.ts",
    "migrate:check": "node -e \"require('dotenv').config(); console.log(process.env.DATABASE_URL? 'DATABASE_URL set' : 'DATABASE_URL NOT set')\"",
  "db:check": "node ./scripts/db-check.js",
    "prisma:generate": "echo \"Prisma removed: use supabase client or generate types from SQL.\"",
    "lint": "eslint src --ext .ts"
  },
  "keywords": [
    "api",
    "express",
    "discord"
  ],
  "author": "Emperione Team",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.33.0",
    "@types/jsonwebtoken": "^9.0.10",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.21",
    "@types/node": "^20.5.6",
    "@types/pg": "^8.6.7",
    "eslint": "^8.45.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.2"
  }
}
